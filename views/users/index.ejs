<div class="container mt-4">
  <h2 class="mb-4">Daftar Users</h2>

  <table class="table table-bordered table-hover table-striped">
    <thead class="table-dark text-center">
      <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>Email</th>
        <th>Role</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <tr>
            <td class="text-center"><%= user.id_users %></td>
            <td><%= user.nama %></td>
            <td><%= user.email %></td>
            <td class="text-center">
              <span class="badge <%= user.role === 'super admin' ? 'bg-danger' : 'bg-primary' %>">
                <%= user.role %>
              </span>
            </td>
            <td class="text-center">
              <a href="/users/edit/<%= user.id_users %>" class="btn btn-sm btn-warning">Edit</a>
              <a href="/users/delete/<%= user.id_users %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus user ini?')">Hapus</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5" class="text-center text-muted">Belum ada user terdaftar</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="d-flex justify-content-between">
    <a href="/dashboard" class="btn btn-secondary">Kembali</a>
    <a href="/auth/register" class="btn btn-success">+ Tambah User</a>
  </div>
</div>
