<div class="container mt-4">
  <h2 class="mb-4">Daftar Pengunjung</h2>

  <% if (pengunjung.length > 0) { %>
  <table class="table table-bordered table-hover table-striped">
    <thead class="table-dark text-center">
      <tr>
        <th>ID</th>
        <th>Wajah</th>
        <th>Pakaian</th>
        <th>Jenis Kelamin</th>
        <th>No Polisi Kendaraan</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% pengunjung.forEach(p => { %>
      <tr>
        <td class="text-center"><%= p.id_pengunjung %></td>
        <td><%= p.wajah %></td>
        <td><%= p.pakaian %></td>
        <td class="text-center"><%= p.jenis_kelamin %></td>
        <td class="text-center"><%= p.nopolisi || '-' %></td>
        <td class="text-center">
          <a href="/pengunjung/edit/<%= p.id_pengunjung %>" class="btn btn-sm btn-warning">Edit</a>
          <form action="/pengunjung/delete/<%= p.id_pengunjung %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Yakin hapus?')">Hapus</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>
  <p class="text-center text-muted">Belum ada pengunjung</p>
  <% } %>

  <div class="d-flex justify-content-between mt-3">
    <a href="/dashboard" class="btn btn-secondary">Kembali</a>
    <a href="/pengunjung/add" class="btn btn-success">+ Tambah Pengunjung</a>
  </div>
</div>
