  <h1>Edit Tarif</h1>
  <form method="post" action="/tarif/edit/<%= tarif.id_tarif %>">
    <label>Jenis Kendaraan</label><br>
    <input type="text" name="jenis" value="<%= tarif.type %>" required><br><br>

    <label>Harga</label><br>
    <input type="number" name="harga" value="<%= tarif.harga %>" required><br><br>

    <button type="submit">Update</button>
  </form>
  <br>
  <a href="/tarif">Kembali</a>
</body>
</html>
