<div class="container mt-4">
  <h2 class="mb-4">Edit Tarif</h2>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/tarif/edit/<%= tarif.id_tarif %>" method="POST" class="card p-4 shadow-sm">
    <div class="mb-3">
  <label for="type" class="form-label">Jenis Kendaraan</label>
  <select class="form-select" id="type" name="type" required>
    <option value="mobil" <%= tarif.type === 'mobil' ? 'selected' : '' %>>Mobil</option>
    <option value="motor" <%= tarif.type === 'motor' ? 'selected' : '' %>>Motor</option>
  </select>
</div>

    <div class="mb-3">
      <label for="harga" class="form-label">Harga per Jam</label>
      <input type="number" class="form-control" id="harga" name="harga" value="<%= tarif.harga %>" required>
    </div>

    <div class="mb-3">
      <label for="waktu" class="form-label">Waktu (menit)</label>
      <input type="number" class="form-control" id="waktu" name="waktu" value="<%= tarif.waktu %>" required>
    </div>

    <div class="d-flex justify-content-between">
      <a href="/tarif" class="btn btn-secondary">Batal</a>
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
</div>
