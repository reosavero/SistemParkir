<div class="container mt-5">
  <h2>Dashboard Admin</h2>
  <p>
    Selamat datang, <strong><%= user.nama %></strong> 
    (Role: <%= user.role %>)
  </p>

  <div class="row mt-4">
    <!-- Kendaraan -->
    <div class="col-md-3">
      <div class="card text-white bg-primary mb-3 shadow rounded-3">
        <div class="card-body">
          <h5 class="card-title">Total Kendaraan</h5>
          <p class="card-text fs-3"><%= totalKendaraan %></p>
          <a href="/kendaraan" class="btn btn-light btn-sm">Lihat</a>
        </div>
      </div>
    </div>

    
    <!-- Pengunjung -->
    <div class="col-md-3">
      <div class="card text-white bg-danger mb-3 shadow rounded-3">
        <div class="card-body">
          <h5 class="card-title">Total Pengunjung</h5>
          <p class="card-text fs-3"><%= totalPengunjung %></p>
          <a href="/pengunjung" class="btn btn-light btn-sm">Kelola</a>
        </div>
      </div>
    </div>
  </div>
</div>
